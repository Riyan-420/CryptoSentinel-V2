# Hopsworks (Required for Feature Store & Model Registry)
HOPSWORKS_API_KEY=your_api_key_here
HOPSWORKS_PROJECT_NAME=CryptoSentinel

# Prefect Cloud (Required for reliable scheduling)
PREFECT_API_URL=https://api.prefect.cloud/api/accounts/YOUR_ACCOUNT_ID/workspaces/YOUR_WORKSPACE_ID
PREFECT_API_KEY=your_prefect_api_key_here

# Hugging Face (Required for Streamlit deployment)
HF_TOKEN=your_huggingface_token_here

# Optional: Notifications
DISCORD_WEBHOOK_URL=
SLACK_WEBHOOK_URL=

# Model Configuration
TRAINING_INTERVAL_MINUTES=30
PREDICTION_REFRESH_MINUTES=5
DIRECTION_TOLERANCE_PCT=0.1

# Hardware (for local training)
USE_GPU=false
OMP_NUM_THREADS=4

